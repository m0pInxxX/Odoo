<data>
  <xpath expr="/t[@t-name='stock.report_delivery_document']" position="replace">
    <t t-name="stock.report_delivery_document">
      <t t-call="web.html_container">
        <t t-call="web.external_layout">
          <t t-set="o" t-value="o.with_context(lang=o._get_report_lang())"/>
          <div class="page">
            <h2>
              <strong>SURAT JALAN</strong>
            </h2>
            <span t-field="o.name"/>
            
            <table class="table table-sm">
              <thead>
                <tr>
                  <th><strong>Product</strong></th>
                  <th class="text-center"><strong>Quantity</strong></th>
                </tr>
              </thead>
              <tbody>
                <t t-foreach="o.move_ids" t-as="move">
                  <tr>
                    <td>
                      <span t-field="move.product_id.name"/>
                      <t t-if="move.sale_line_id and move.sale_line_id.order_id">
                        <t t-set="sale_order" t-value="move.sale_line_id.order_id"/>
                        <t t-foreach="sale_order.order_line" t-as="line">
                          <t t-if="line.product_uom_qty == 0 and line.name">
                            <br/>
                            <span style="font-size: 12px;" t-field="line.name"/>
                          </t>
                        </t>
                      </t>
                    </td>
                    <td class="text-center">
                      <span t-field="move.product_uom_qty"/>
                      <span t-field="move.product_uom"/>
                    </td>
                  </tr>
                </t>
              </tbody>
            </table>
          </div>
        </t>
      </t>
    </t>
  </xpath>
</data>