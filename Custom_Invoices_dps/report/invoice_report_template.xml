<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_dps">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="header">
                        <div class="row">
                            <div class="col-6">
                                <h2>INVOICE</h2>
                                <div t-if="o.delivery_date">
                                    <strong>Delivery Date:</strong> <span t-field="o.delivery_date"/>
                                </div>
                            </div>
                            <div class="col-6 text-right">
                                <div t-if="o.partner_id">
                                    <strong>Customer:</strong> <span t-field="o.partner_id"/>
                                </div>
                                <div t-if="o.invoice_date">
                                    <strong>Invoice Date:</strong> <span t-field="o.invoice_date"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="article mt32">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th class="text-right">Quantity</th>
                                    <th class="text-right">Unit Price</th>
                                    <th class="text-right">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="has_product_lines" t-value="False"/>
                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                    <t t-if="not line.display_type">
                                        <t t-set="has_product_lines" t-value="True"/>
                                    </t>
                                    <tr t-att-class="'font-italic' if line.display_type == 'line_note' else ''">
                                        <td>
                                            <t t-if="line.display_type == 'line_section'">
                                                <strong><span t-field="line.name"/></strong>
                                            </t>
                                            <t t-elif="line.display_type == 'line_note'">
                                                <span t-field="line.name"/>
                                            </t>
                                            <t t-else="">
                                                <span t-field="line.name"/>
                                            </t>
                                        </td>
                                        <td class="text-right">
                                            <span t-if="not line.display_type" t-field="line.quantity"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-if="not line.display_type" t-field="line.price_unit"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-if="not line.display_type" t-field="line.price_subtotal"/>
                                        </td>
                                    </tr>
                                </t>
                                <!-- Tampilkan kondisi harga jika ada -->
                                <t t-if="has_product_lines">
                                    <t t-foreach="o.invoice_line_ids" t-as="line">
                                        <t t-if="'Kondisi Harga' in line.name">
                                            <tr>
                                                <td colspan="4" class="border-0 pt-3">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-right"><strong>Subtotal</strong></td>
                                    <td class="text-right"><span t-field="o.amount_untaxed"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-right"><strong>Tax</strong></td>
                                    <td class="text-right"><span t-field="o.amount_tax"/></td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-right"><strong>Total</strong></td>
                                    <td class="text-right"><span t-field="o.amount_total"/></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="footer mt32">
                        <div class="row">
                            <div class="col-12">
                                <p>Thank you for your business!</p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo> 